<div class="container">
    <div class="bg-light p-5">
        <h4>Add</h4>
        <div class="card">

            <div class="card-body">
                <form action="/sale/add" method="post" class="needs-validation" novalidate>

                    <div class="row p-5">
                        <div class="col-6">
                            <label for="" class="form-label">Customer ID</label>
                            <input type="text" name="customer_id" id="customer_id" class="form-control" readonly>
                        </div>
                        <div class="col-6">
                            <div class="row">
                                <div class="col-6">
                                    <label for="" class="form-label">Total Price</label>
                                    <input type="text" name="total_price" id="total_price" class="form-control" readonly>
                                </div>
                                <div class="col-6">
                                    <label for="" class="form-label">Total Quantity</label>
                                    <input type="text" name="total_quantity" id="total_quantity" class="form-control" readonly>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row p-5">
                        <table class="table table-sale">
                            <thead>
                                <th>
                                    Product
                                </th>
                                <th>
                                    Quantity
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    Total
                                </th>
                                <th>
                                    Action
                                </th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <select class="form-select" aria-label="Default select example"
                                            name="products[]" id="product_id" required>
                                            <option value="">Select a Product </option>
                                            {{#each product}}
                                            <option value="{{_id}}">{{name}}</option>
                                            {{/each}}
                                        </select>
                                        <div class="invalid-feedback">
                                            Please choose a product.
                                        </div>
                                    </td>
                                    <td>
                                        <input type="number" name="quantity[]" id="quantity" class="form-control"
                                            required>
                                        <div class="invalid-feedback">
                                            Please add quantity.
                                        </div>
                                    </td>
                                    <td>
                                        <input type="text" name="price[]" id="price" class="form-control" required>
                                        <div class="invalid-feedback">
                                            Please add sale price.
                                        </div>
                                    </td>
                                    <td><input type="text" name="total[]" id="total" class="form-control" readonly></td>
                                    <td>
                                        <a href="javascript:void(0)" onclick="add_more(this); ">
                                            <i class="bi bi-plus-circle-fill"></i>
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <button type="submit" class="btn btn-primary text-right"> Submit</button>
                </form>
            </div>
        </div>
    </div>

</div>
<script>
    window.onload = function gen_random_number() {
        let num = "";
        const characters = "abcdefghijklmnopqrstuvwxyz012345679";

        for (let i = 1; i <= 7; i++) {
            num += characters.charAt(Math.floor(Math.random() * characters.length));
        }
        // console.log(num);

        document.getElementById('customer_id').value = num;
    }
</script>