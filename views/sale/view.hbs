<div class="container">
    <div class="bg-light p-5">
        <h3>View</h3>
        <div class="mb-4">
            <a href="/sale/edit/{{sale._id}}" class="btn btn-primary">Edit</a>
            <button class="btn btn-primary" onclick="print();"> Print Page</button>
        </div>
        <div class="card">

            <div class="card-body">
                <div class="row px-5">
                    <div class="col-4">
                        <label for="customer"><strong>Customer</strong></label>
                        <p>
                            {{sale.customer_id}}
                        </p>
                    </div>
                    <div class="col-4">
                        <label for="Total"><strong> Total Quantity</strong></label>
                        <p>{{sale.total_quantity}}</p>
                    </div>
                    <div class="col-4">
                        <label for="Total"><strong> Total Price</strong></label>
                        <p>{{sale.total_price}}</p>
                    </div>
                </div>
                
                    <div class="row p-5">
                        <table class="table table-hover">
                            <thead>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total</th>
                            </thead>
                            <tbody>
                                {{#each item}}
                                <tr>
                                    <td>{{product.name}}</td>
                                    <td>{{quantity}}</td>
                                    <td>{{price}}</td>
                                    <td>{{getTotalPrice price quantity}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>

                    </div>
            </div>
        </div>
    </div>

</div>