<div class="container py-5 mt-5">
    <div class="row justify-content-center">
        <div class="col-6">
            <h3>
                Contact me or not
            </h3>
            {{>errors errors=errors}}
            <form action="/contact" method="post" class="g-3 needs-validation" novalidate>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <input type="email" name="contact_email" class="form-control" id="exampleInputEmail1"
                        aria-describedby="emailHelp" required>
                    <div class="invalid-feedback">
                        Please enter email
                    </div>
                    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" name="contact_name" class="form-control" id="exampleInputPassword1" required>
                    <div class="invalid-feedback">
                        Please enter name
                    </div>
                </div>
                <div class="mb-3">
                    <label for="name" class="form-label">Subject</label>
                    <input type="text" name="contact_subject" class="form-control" id="exampleInputPassword1" required>
                    <div class="invalid-feedback">
                        Please enter subject
                    </div>
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea name="contact_msg" id="" class="form-control" cols="30" rows="10" required></textarea>
                    <div class="invalid-feedback">
                        Please enter some message
                    </div>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" name="contact_consent" id="exampleCheck1" required>
                    <label class="form-check-label" for="exampleCheck1">Privacy Consent</label>
                    <div class="invalid-feedback">
                        Please agree to the consent
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
