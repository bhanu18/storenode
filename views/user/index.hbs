<section class="vh-100">
    <div class="container py-5">
        <div class="row d-flex justify-content-center">
            <div class="col-6">
                {{>errors errors=errors}}
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col col-lg-6 mb-4 mb-lg-0">
                <div class="card mb-3" style="border-radius: .5rem;">
                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center text-white"
                            style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                            <img src="{{getImage user.image.contentType user.image.data}}" alt="Avatar"
                                class="img-fluid mt-5 mb-2" style="width: 80px;" />
                            <h5>{{user.name}}</h5>
                            <i class="far fa-edit mb-5"></i>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body p-4">
                                <h6>Information</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-8 mb-3">
                                        <h6>Email</h6>
                                        <p class="text-muted">{{user.email}}</p>
                                    </div>
                                    <div class="col-4 mb-3">
                                        <h6>Phone</h6>
                                        <p class="text-muted">{{user.phone}}</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <button data-bs-toggle="modal" data-bs-target="#edituser"><i
                                                class="bi bi-pencil-square"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<div class="container">
    <div class="responsive">
        <table class="table table-hover">
            <thead>
                <th>Name</th>
                <th>Email</th>
                <th>Verified</th>
                <th>Image</th>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{email}}</td>
                    <td>{{email_verfied_at}}</td>
                    {{#if image}}
                    <td><img src="{{getImage image.contentType image.data}}" class="img-fluid" style="width: 80px;" alt="" /></td>
                    {{/if}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
</section>


<!-- Modal -->
<div class="modal fade" id="edituser" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/user/edit/{{user._id}}" enctype="multipart/form-data" method="POST">
                    {{!-- <input type="hidden" name="_method" value="PUT"> --}}
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" name="name" id="name" value="{{user.name}}" required>
                        <div class="invalid-feedback">
                            Please enter name
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="text" class="form-control" id="name" value="{{user.email}}" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone</label>
                        <input type="text" class="form-control" name="phone" id="name" value="{{user.phone}}" required>
                    </div>
                    <div class="mb-3">
                        <label for="formFileSm" class="form-label">Upload image</label>
                        <input class="form-control form-control-sm" name="image" id="formFileSm" type="file">
                    </div>
                    <div class="mb-3 text-right">
                        <div class="row">
                            <div class="col-6 d-flex justify-content-end">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>